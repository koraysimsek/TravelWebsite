@model List<AcunMedyaTravelProject.Entities.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>CategoryID</th>
                <th>Kategori İsmi</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.CategoryID)">Sil</button></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-success">Kategori Oluştur</a>
</div>

<script>
    function Delete(id)
    {
        Swal.fire({
            title: "Emin misin?",
            text: "Bu işlemi geri döndüremeyeceksin!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veriniz silindi.",
                    icon: "success"
                });
                window.location.href = '/Category/DeleteCategory/' + id;
            }
        });
    }
</script>