@model AcunMedyaTravelProject.Entities.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Kategori Güncelle</h2>

    <form method="post">
        @Html.HiddenFor(x => x.CategoryID)

        <div class="form-group mb-3">
            <label for="CategoryName" class="form-label">Kategori Adı</label>
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Kategori adını girin" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Güncelle</button>
    </form>
</div>