@model List<AcunMedyaTravelProject.Entities.Destinations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Seyahatler</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>DestinationsID</th>
                <th>Başlık</th>
                <th>Fotoğraf</th>
                <th>Seyahat Ücreti</th>
                <th>Gün Sayısı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationsID</td>
                    <td>@item.Title</td>
                    <td>@item.ImageURL</td>
                    <td>@item.Description</td>
                    <td>@item.Description2</td>
                    <td><a href="/Destinations/UpdateDestinations/@item.DestinationsID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Destinations/DeleteDestinations/@item.DestinationsID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Destinations/CreateDestinations/" class="btn btn-success">Seyahat Oluştur</a>
</div>