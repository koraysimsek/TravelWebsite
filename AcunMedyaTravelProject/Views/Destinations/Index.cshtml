@model List<AcunMedyaTravelProject.Entities.Destinations>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Seyahatler</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>DestinationsID</th>
                <th>CategoryID</th>
                <th>Başlık</th>
                <th>Fotoğraf</th>
                <th>Seyahat Ücreti</th>
                <th>Gün Sayısı</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationsID</td>
                    <td>@item.CategoryID</td>
                    <td>@item.Title</td>
                    <td><img src="@item.ImageURL" style="width:50px" /></td>
                    <td>@item.Description</td>
                    <td>@item.Description2</td>
                    <td><a href="/Destinations/UpdateDestinations/@item.DestinationsID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.DestinationsID)">Sil</button></td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <a href="/Destinations/CreateDestinations/" class="btn btn-success">Seyahat Oluştur</a>
    <a href="/Destinations/SearchDestinations/" class="btn btn-primary">Seyahat Ara</a>
</div>

<script>
    function Delete(id)
    {
        Swal.fire({
            title: "Emin misin?",
            text: "Bu işlemi geri döndüremeyeceksin!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veriniz silindi.",
                    icon: "success"
                });
                window.location.href = '/Destinations/DeleteDestinations/' + id;
            }
        });
    }
</script>