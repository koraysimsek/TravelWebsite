@model AcunMedyaTravelProject.Entities.Slider
@{
    ViewBag.Title = "UpdateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Slider Güncelle</h2>

    <form method="post">
        @Html.HiddenFor(x => x.SliderID)

        <div class="form-group mb-3">
            <label for="Title" class="form-label">Başlık</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Slider başlığını girin" })
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Açıklama</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama girin" })
        </div>

        <div class="form-group mb-3">
            <label for="Description2" class="form-label">Açıklama 2</label>
            @Html.TextBoxFor(x => x.Description2, new { @class = "form-control", placeholder = "İkinci açıklamayı girin" })
        </div>

        <div class="form-group mb-4">
            <label for="ImageURL" class="form-label">Fotoğraf URL</label>
            @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control", placeholder = "Görsel URL'sini girin" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Güncelle</button>
    </form>
</div>