@model List<AcunMedyaTravelProject.Entities.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Slider</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SliderID</th>
                <th>Başlık</th>
                <th>Açıklama1</th>
                <th>Açıklama2</th>
                <th>Fotoğraf</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SliderID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Description2</td>
                    <td>@item.ImageURL</td>
                    <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Slider/CreateSlider/" class="btn btn-success">Slider Oluştur</a>
</div>