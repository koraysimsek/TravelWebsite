@model AcunMedyaTravelProject.Entities.Testimonial
@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Referans Güncelle</h2>

    <form method="post">
        @Html.HiddenFor(x => x.TestimonialID)

        <div class="form-group mb-3">
            <label for="TestimonialName" class="form-label">Referans Adı</label>
            @Html.TextBoxFor(x => x.TestimonialName, new { @class = "form-control", placeholder = "Referans adını girin" })
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Açıklama</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama girin" })
        </div>

        <div class="form-group mb-3">
            <label for="ImageURL" class="form-label">Fotoğraf URL</label>
            @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control", placeholder = "Fotoğraf linkini girin" })
        </div>

        <div class="form-group mb-4">
            <label for="Title" class="form-label">Ünvan</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Ünvan girin" })
        </div>

        <button type="submit" class="btn btn-primary w-100">Güncelle</button>
    </form>
</div>