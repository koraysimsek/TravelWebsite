@model List<AcunMedyaTravelProject.Entities.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referanslar</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>TestimonialID</th>
                <th>Referans Adı</th>
                <th>Açıklama</th>
                <th>Fotoğraf</th>
                <th>Ünvan</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TestimonialID</td>
                    <td>@item.TestimonialName</td>
                    <td>@item.Description</td>
                    <td>@item.ImageURL</td>
                    <td>@item.Title</td>
                    <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.TestimonialID)">Sil</button></td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <a href="/Testimonial/CreateTestimonial/" class="btn btn-success">Referans Oluştur</a>
    <a href="/Testimonial/SearchTestimonial/" class="btn btn-primary">Referans Ara</a>
</div>

<script>
    function Delete(id) {
        Swal.fire({
            title: "Emin misin?",
            text: "Bu işlemi geri döndüremeyeceksin!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veriniz silindi.",
                    icon: "success"
                });
                window.location.href = '/Testimonial/DeleteTestimonial/' + id;
            }
        });
    }
</script>