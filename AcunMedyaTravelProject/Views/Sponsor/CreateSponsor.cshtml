
@{
    ViewBag.Title = "CreateSponsor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="mb-4">Sponsor Oluşturma Sayfası</h2>

<form method="post" style="max-width: 300px;">
    <div class="mb-3">
        <label for="ImageURL" class="form-label">Fotoğraf URL</label>
        <input type="text" class="form-control" id="ImageURL" name="ImageURL" placeholder="Görsel linkini girin" />
    </div>

    <button type="submit" class="btn btn-success w-100">Ekle</button>
</form>
