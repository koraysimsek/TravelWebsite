@model List<AcunMedyaTravelProject.Entities.Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servisler</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ServicesID</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Fotoğraf</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServicesID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ImageURL</td>
                    <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Services/DeleteServices/@item.ServicesID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Services/CreateServices/" class="btn btn-success">Kategori Oluştur</a>
</div>