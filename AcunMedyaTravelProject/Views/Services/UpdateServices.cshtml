@model AcunMedyaTravelProject.Entities.Services
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Hizmet Güncelle</h2>

    <form method="post">
        @Html.HiddenFor(x => x.ServicesID)

        <div class="form-group mb-3">
            <label for="Title" class="form-label">Başlık</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Hizmet başlığı girin" })
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">Açıklama</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Hizmet açıklaması girin" })
        </div>

        <div class="form-group mb-4">
            <label for="ImageURL" class="form-label">Fotoğraf URL</label>
            @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control", placeholder = "Görsel URL'sini girin" })
        </div>

        <button type="submit" class="btn btn-success w-100">Güncelle</button>
    </form>
</div>