
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            color: #212529;
        }

        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-title {
            font-weight: 600;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .navbar {
            background-color: #ffffff !important;
            border-bottom: 1px solid #dee2e6;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .navbar-brand img {
            max-height: 40px;
        }

        .navbar-toggler {
            border: none;
        }

        .navbar .icon-menu,
        .navbar .icon-cog {
            font-size: 1.3rem;
            color: #343a40;
        }

        .dropdown-menu {
            border-radius: 0.75rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            border-radius: 0.5rem;
            border: 1px solid #ced4da;
        }

        li {
            font-size: 1rem;
            line-height: 2;
        }

        h1.text-dark {
            font-size: 2.25rem;
            font-weight: 700;
        }

        .content-wrapper {
            padding: 2rem;
        }
    </style>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Regal Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="vendors/feather/feather.css">
    <link rel="stylesheet" href="vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <link rel="stylesheet" href="vendors/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="vendors/jquery-bar-rating/fontawesome-stars-o.css">
    <link rel="stylesheet" href="vendors/jquery-bar-rating/fontawesome-stars.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="images/favicon.png" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href=""><img src="~/regal-1.0.0/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href=""><img src="~/regal-1.0.0/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav mr-lg-2">
                    <li class="nav-item nav-search d-none d-lg-block">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="search">
                                    <i class="icon-search"></i>
                                </span>
                            </div>
                            <input type="text" class="form-control" placeholder="Search Projects.." aria-label="search" aria-describedby="search">
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav navbar-nav-right">
                    
                    
                    <li class="nav-item dropdown d-flex mr-4 ">
                        <a class="nav-link count-indicator dropdown-toggle d-flex align-items-center justify-content-center" id="notificationDropdown" href="#" data-toggle="dropdown">
                            <i class="icon-cog"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">

                            <a class="dropdown-item preview-item">
                                <i class="icon-inbox"></i> Logout
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">

                    <div class="row mt-3 align-items-stretch">
                        <!-- Sol Kartlar: Admin ve Servis -->
                        <div class="col-xl-3 d-flex flex-column grid-margin stretch-card">
                            <div class="d-flex flex-column flex-grow-1 h-100">
                                <div class="card flex-fill mb-3">
                                    <div class="card-body">
                                        <h4 class="card-title text-info">👤 Admin Sayısı</h4>
                                        <h1 class="text-dark">@ViewBag.AdminsCount</h1>
                                    </div>
                                </div>
                                <div class="card flex-fill mb-3">
                                    <div class="card-body">
                                        <h4 class="card-title text-warning">🛠️ Servis Sayısı</h4>
                                        <h1 class="text-dark">@ViewBag.ServicesCount</h1>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Sağdaki tablo -->
                        <div class="col-xl-9 d-flex flex-column grid-margin stretch-card">
                            <div class="card flex-fill">
                                <div class="card-body">
                                    <h4 class="card-title text-primary mb-4">🧭 Son Eklenen 3 Seyahat Yeri</h4>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead class="bg-primary text-white">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Başlık</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    var index = 1;
                                                    foreach (var title in ViewBag.Last3Destinations as List<string>)
                                                    {
                                                        <tr>
                                                            <td>@index</td>
                                                            <td>@title</td>
                                                        </tr>
                                                        index++;
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Alt satıra taşınan Referans kartı -->
                    <div class="row mt-3">
                        <!-- Sol: Referans Sayısı Kartı -->
                        <div class="col-xl-3 d-flex grid-margin stretch-card">
                            <div class="card w-100">
                                <div class="card-body">
                                    <h4 class="card-title text-success">💬 Referans Sayısı</h4>
                                    <h1 class="text-dark">@ViewBag.TestimonialCount</h1>
                                    <div style="
    background: linear-gradient(135deg, #d4edda 0%, #a3d7a5 100%);
    padding: 16px 20px;
    color: #155724;
    box-shadow: 0 8px 16px rgba(0, 128, 0, 0.15);
    border-radius: 12px;
    max-width: 320px;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
">
                                        <h2 style="
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 8px;
        color: #19692c;
    ">
                                            Son Eklenen Referans
                                        </h2>
                                        <p style="
        font-size: 1.4rem;
        font-weight: 600;
        color: #2c7a2c;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    ">@ViewBag.LastTestimonialName</p>
                                </div>

                                </div>
                            </div>
                        </div>

                        <!-- Sağ: Son Eklenen 3 Abonelik Tablosu -->
                        <div class="col-xl-9 d-flex flex-column grid-margin stretch-card">
                            <div class="card flex-fill">
                                <div class="card-body">
                                    <h4 class="card-title text-primary mb-4">📩 Son Eklenen 3 Abonelik</h4>
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <thead class="bg-primary text-white">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Email</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    var test = 1;
                                                    foreach (var email in ViewBag.Last3Subscriptions as List<string>)
                                                    {
                                                        <tr>
                                                            <td>@test</td>
                                                            <td>@email</td>
                                                        </tr>
                                                        test++; // burası index++ değil test++ olmalı
                                                    }
                                                }
                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xl-4 grid-margin stretch-card">
                            <div class="card" style="min-height: 200px;">
                                <!-- Kartı uzattık -->
                                <div class="card-body d-flex flex-column justify-content-between">
                                    <div>
                                        <h4 class="card-title text-danger">🌍 Seyahat Sayısı</h4>
                                        <h1 class="text-dark">@ViewBag.DestinationsCount</h1>
                                    </div>

                                    <div style="
                background: linear-gradient(135deg, #d4edda 0%, #a3d7a5 100%);
                padding: 16px 20px;
                color: #155724;
                box-shadow: 0 8px 16px rgba(0, 128, 0, 0.15);
                border-radius: 12px;
                max-width: 100%;
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                margin-top: 20px;
            ">
                                        <h2 style="
                    font-size: 1.3rem;
                    font-weight: 700;
                    margin-bottom: 8px;
                    color: #19692c;
                ">
                                            Son Eklenen Seyahat Yeri
                                        </h2>
                                        <p style="
                    font-size: 1.4rem;
                    font-weight: 600;
                    color: #2c7a2c;
                    margin: 0;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                ">@ViewBag.LastDestinationName</p>
                    </div>
                    </div>
                    </div>
                    </div>

                    <div class="col-xl-4 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title text-dark">✉️ Abonelik Sayısı</h4>
                                <h1 class="text-dark">@ViewBag.SubscriptionCount</h1>
                                <!-- İçerik temizlendi -->
                                <div style="
    background: linear-gradient(135deg, #d4edda 0%, #a3d7a5 100%);
    padding: 16px 20px;
    color: #155724;
    box-shadow: 0 8px 16px rgba(0, 128, 0, 0.15);
    border-radius: 12px;
    max-width: 100%;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin-top: 20px;
">
                                    <h2 style="
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 8px;
        color: #19692c;
    ">
                                        Son Eklenen Abone
                                    </h2>
                                    <p style="
        font-size: 1.4rem;
        font-weight: 600;
        color: #2c7a2c;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    ">@ViewBag.LastSubscriptionEmail</p>
                            </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-4 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title text-info mb-3">🗂️ Kategori Sayısı</h4>
                                <h1 class="text-dark">@ViewBag.CategoryCount</h1>
                                <!-- İçerik temizlendi -->
                                <div style="
    background: linear-gradient(135deg, #d4edda 0%, #a3d7a5 100%);
    padding: 16px 20px;
    color: #155724;
    box-shadow: 0 8px 16px rgba(0, 128, 0, 0.15);
    border-radius: 12px;
    max-width: 100%;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin-top: 20px;
">
                                    <h2 style="
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 8px;
        color: #19692c;
    ">
                                        Son Eklenen Kategori
                                    </h2>
                                    <p style="
        font-size: 1.4rem;
        font-weight: 600;
        color: #2c7a2c;
        margin: 0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    ">@ViewBag.LastCategoryName</p>
                            </div>
                            </div>
                        </div>
                    </div>

                    </div>
                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                

                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- base:js -->
    <script src="vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page-->
    <!-- End plugin js for this page-->
    <!-- inject:js -->
    <script src="js/off-canvas.js"></script>
    <script src="js/hoverable-collapse.js"></script>
    <script src="js/template.js"></script>
    <!-- endinject -->
    <!-- plugin js for this page -->
    <script src="vendors/chart.js/Chart.min.js"></script>
    <script src="vendors/jquery-bar-rating/jquery.barrating.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- Custom js for this page-->
    <script src="~/regal-1.0.0/js/dashboard.js"></script>
    <!-- End custom js for this page-->
</body>

</html>

