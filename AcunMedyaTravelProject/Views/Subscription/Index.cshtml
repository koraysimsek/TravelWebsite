@model List<AcunMedyaTravelProject.Entities.Subscription>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <h2 class="text-center my-4 p-3 bg-primary text-white rounded shadow">📨 Abonelikler Listesi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SubscriptionID</th>
                <th>Email</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SubscriptionID</td>
                    <td>@item.Email</td>
                    <td><a href="/Subscription/UpdateSubscription/@item.SubscriptionID" class="btn btn-success">Güncelle</a></td>
                    <td><button class="btn btn-danger" onclick="Delete(@item.SubscriptionID)">Sil</button></td>
                </tr>
            }

        </tbody>
    </table>
    <br />
    <a href="/Subscription/CreateSubscription/" class="btn btn-success">Abonelik Oluştur</a>
    <a href="/Subscription/SearchSubscription/" class="btn btn-primary">Abonelik Ara</a>
</div>

<script>
    function Delete(id)
    {
        Swal.fire({
            title: "Emin misin?",
            text: "Bu işlemi geri döndüremeyeceksin!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet!"
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire({
                    title: "Silindi!",
                    text: "Veriniz silindi.",
                    icon: "success"
                });
                window.location.href = '/Subscription/DeleteSubscription/' + id;
            }
        });
    }
</script>