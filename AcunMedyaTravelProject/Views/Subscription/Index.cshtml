@model List<AcunMedyaTravelProject.Entities.Subscription>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Aboneler</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>SubscriptionID</th>
                <th>Email</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SubscriptionID</td>
                    <td>@item.Email</td>
                    <td><a href="/Subscription/UpdateSubscription/@item.SubscriptionID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Subscription/DeleteSubscription/@item.SubscriptionID" class="btn btn-danger">Sil</a></td>
                </tr>
            }

        </tbody>
    </table>
    <a href="/Subscription/CreateSubscription/" class="btn btn-success">Abone Oluştur</a>
</div>