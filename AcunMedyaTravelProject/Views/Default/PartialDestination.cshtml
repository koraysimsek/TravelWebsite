@model  List<AcunMedyaTravelProject.Entities.Destinations>
<div class="container">
    <div class="position-absolute start-100 bottom-0 translate-middle-x d-none d-xl-block ms-xl-n4"><img src="~/jadoo/public/assets/img/dest/shape.svg" alt="destination" /></div>
    <div class="mb-7 text-center">
        <h5 class="text-secondary">En Çok Satanlar</h5>
        <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize">Seyahatler</h3>
    </div>

    <div class="mt-4 mb-5 text-center">
        <style>
            .filter-btn {
                border-radius: 50px; /* Geoit görünüm için */
                transition: all 0.3s ease;
                padding: 12px 35px; /* Daha geniş buton görünümü */
                margin: 5px;
                font-weight: 500;
            }

                .filter-btn:hover,
                .filter-btn.active {
                    background-color: #0000FF;
                    color: #fff;
                }
        </style>

        <div class="btn-group" role="group" aria-label="Filter Buttons">
            <button type="button" class="btn btn-outline-primary filter-btn active" data-category="all">
                Tümü
            </button>
            <button type="button" class="btn btn-outline-primary filter-btn" data-category="5">
                Avrupa
            </button>
            <button type="button" class="btn btn-outline-primary filter-btn" data-category="6">
                Asya
            </button>
            <button type="button" class="btn btn-outline-primary filter-btn" data-category="7">
                Amerika
            </button>
        </div>
    </div>




    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 destination-card" data-category="@item.CategoryID">
                <div class="card overflow-hidden shadow">
                    <img class="card-img-top" src="@item.ImageURL" alt="Rome, Italty" width="400" height="250" />
                    <div class="card-body py-4 px-3">
                        <div class="d-flex flex-column flex-lg-row justify-content-between mb-3">
                            <h4 class="text-secondary fw-medium"><a class="link-900 text-decoration-none stretched-link" href="#!">@item.Title</a></h4><span class="fs-1 fw-medium">@item.Description</span>
                        </div>
                        <div class="d-flex align-items-center"> <img src="~/jadoo/public/assets/img/dest/navigation.svg" style="margin-right: 14px" width="20" alt="navigation" /><span class="fs-0 fw-medium">@item.Description2</span></div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>


<script>
    //sayfa ilk yüklenildiğinde çalışıcak kodu temsil ediyor
    document.addEventListener('DOMContentLoaded', function () {

        //Tüm butonları bir değişkene atadık
        const filterButtons = document.querySelectorAll('.filter-btn');
        //tüm kartları bir değişkene atadık
        const destinationCards = document.querySelectorAll('.destination-card');

        //her filtre butonu için tıklama olayı tanımladık
        filterButtons.forEach(button => {
            button.addEventListener('click', function () {

                filterButtons.forEach(btn => btn.classList.remove('active'));

                this.classList.add('active');

                const category = this.getAttribute('data-category');

                destinationCards.forEach(card => {

                    //eğer kategori all ise ya da kartın kategorisi seçilen kategoriye eşitse
                    if (category === 'all' || card.getAttribute('data-category') === category) {

                        card.style.display = 'block';
                    }
                    else {
                        card.style.display = 'none';
                    }
                });
            });
        });
    });





</script>